.top-header
  .header-box
    = link_to 'hataage', root_path, class: 'header-title'
  

.three-box
  .left
    .left__box 
      .left__box__search
        =form_with url: search_messages_path, method: :get, class: 'left__box__search__form' ,local: true do |f|
          = f.text_field :keyword,class: 'left__box__search__form__word',placeholder: 'キーワードから探す'
          .left__box__search__form__send
            = f.submit '検索'

  .center
    .center__box  
      .center__box__search
        = text_field :keyword,class: 'center__box__search__name'
        .center__box__search__send
          タグ検索



  .right  
    %ul.right-bottom
      - if user_signed_in?
        %li.right-bottom__button
          = link_to 'マイページ', edit_user_path(current_user), class: 'right-bottom__button__registration'
        %li.right-bottom__button
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'right-bottom__button__login'

      - else
        %li.right-bottom__button
          = link_to 'ログイン', new_user_session_path, class: 'right-bottom__button__login'
        %li.right-bottom__button
          = link_to '新規会員登録', new_user_registration_path, class: 'right-bottom__button__registration'
